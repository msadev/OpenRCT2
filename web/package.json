{
  "name": "openrct2-web",
  "version": "1.0.0",
  "description": "OpenRCT2 Web Port - RollerCoaster Tycoon 2 reimplementation in your browser",
  "type": "module",
  "scripts": {
    "dev": "npm run parcel_clean && parcel serve src/index.html --port 3000",
    "build": "parcel build src/index.html --dist-dir dist --public-url ./",
    "build:wasm": "node scripts/build-wasm.js",
    "build:assets": "node scripts/package-assets.js",
    "build:all": "npm run build:wasm && npm run build:assets && npm run build",
    "preview": "npx serve dist -l 3000",
    "parcel_clean": "rimraf dist .parcel-cache"
  },
  "devDependencies": {
    "archiver": "^7.0.1",
    "parcel": "^2.16.4",
    "parcel-reporter-static-files-copy": "^1.5.3",
    "rimraf": "^6.1.2",
    "serve": "^14.2.0",
    "yauzl": "^3.2.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions"
  ],
  "keywords": [
    "openrct2",
    "rollercoaster-tycoon",
    "game",
    "wasm",
    "emscripten"
  ],
  "license": "GPL-3.0",
  "staticFiles": {
    "staticPath": "static",
    "watcherGlob": "**"
  }
}
